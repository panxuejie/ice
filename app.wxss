/**app.wxss**/
@import 'weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}  
.cakeBox {
width:100%;
height:240rpx;
padding:20rpx;
position:relative;
background:#f5f6f5;
border-bottom:6px solid #ccc;
box-sizing:border-box;
}
.businessBox {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  position: relative;
  background: #f5f6f5;
  border-bottom: 6px solid #ccc;     
  box-sizing: border-box;    
}
.business-pic {
  width: 200rpx;
  height: 200rpx;
}
.business-pic image {
  width: 100%;
  height: 100%;
}
.business-desc {
  width: 480rpx;
  height: 200rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.business-promotion {
  color: red;
}
.business-price {
  color: #000;
  font-size: 20px;
}
.business-price text {
  font-size: 16px;
}
.divider{
  height:10rpx;
  background-color: #f1f1f1;
  
}